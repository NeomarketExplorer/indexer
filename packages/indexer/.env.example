# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/polymarket
DB_POOL_MAX=20
QUERY_TIMEOUT_MS=30000

# Server
PORT=3001
HOST=0.0.0.0

# Sync intervals (milliseconds)
MARKETS_SYNC_INTERVAL=300000
TRADES_SYNC_INTERVAL=60000
PRICE_FLUSH_INTERVAL=1000

# Batch sizes
MARKETS_BATCH_SIZE=500
TRADES_BATCH_SIZE=500
TRADES_SYNC_MARKET_LIMIT=100

# API URLs
GAMMA_API_URL=https://gamma-api.polymarket.com
CLOB_API_URL=https://clob.polymarket.com
DATA_API_URL=https://data-api.polymarket.com

# WebSocket
WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws
WS_RECONNECT_INTERVAL=3000
WS_MAX_RECONNECT_ATTEMPTS=10

# Redis (optional)
REDIS_URL=redis://localhost:6379

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Data retention
PRICE_HISTORY_RETENTION_DAYS=30

# Health
SYNC_STALE_THRESHOLD_MS=900000

# Logging
LOG_LEVEL=info

# Environment
NODE_ENV=development
